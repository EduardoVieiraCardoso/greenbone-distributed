{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Scans Ativos",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "greenbone_scans_active",
          "legendFormat": "Ativos"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Total Submetidos",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 0 },
      "targets": [
        {
          "expr": "sum(greenbone_scans_submitted_total)",
          "legendFormat": "Total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Total Completos (Done)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "greenbone_scans_completed_total{gvm_status=\"Done\"}",
          "legendFormat": "Done"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Total Falhas",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "greenbone_scans_failed_total",
          "legendFormat": "Falhas"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Erros de Conexao GVM",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "greenbone_gvm_connection_errors_total",
          "legendFormat": "Erros GVM"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Scans Submetidos / min",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "rate(greenbone_scans_submitted_total[5m]) * 60",
          "legendFormat": "{{ scan_type }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "fillOpacity": 20 }
        },
        "overrides": []
      }
    },
    {
      "title": "Scans Completos por Status",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "increase(greenbone_scans_completed_total[5m])",
          "legendFormat": "{{ gvm_status }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "fillOpacity": 20 }
        },
        "overrides": []
      }
    },
    {
      "title": "Duracao dos Scans (p50 / p90 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(greenbone_scan_duration_seconds_bucket[15m]))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.90, rate(greenbone_scan_duration_seconds_bucket[15m]))",
          "legendFormat": "p90"
        },
        {
          "expr": "histogram_quantile(0.99, rate(greenbone_scan_duration_seconds_bucket[15m]))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "fillOpacity": 10 }
        },
        "overrides": []
      }
    },
    {
      "title": "Taxa de Falhas / min",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "rate(greenbone_scans_failed_total[5m]) * 60",
          "legendFormat": "Falhas"
        },
        {
          "expr": "rate(greenbone_gvm_connection_errors_total[5m]) * 60",
          "legendFormat": "Erros GVM"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "fillOpacity": 20 }
        },
        "overrides": []
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["greenbone", "adapter", "gvm"],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Greenbone Adapter",
  "uid": "greenbone-adapter",
  "version": 1
}
